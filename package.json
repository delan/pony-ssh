{
	"name": "pony-ssh",
	"displayName": "Pony SSH",
	"description": "Fast remote SSH editing",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onFileSystem:ponyssh",
		"onCommand:ponyssh.openFolder"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ponyssh.openFolder",
				"title": "Open Remote Folder",
				"category": "Pony SSH"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Pony SSH Configuration",
			"properties": {
				"ponyssh.hosts": {
					"type": "object",
					"default": {},
					"description": "Available hosts to connect to"
				}
			}
		},
		"menus": {
			"commandPalette": [
				{
					"command": "ponyssh.openFolder"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"maybecompile:worker": "if-newer src/worker/**/* out/worker.zip \"npm run compile:worker\"",
		"compile:worker": "cd src/worker && bestzip ../../out/worker.zip *",
		"compile:ts": "tsc -p ./",
		"compile": "npm run compile:ts && npm run compile:worker",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"@types/node": "^10.12.21",
		"@types/ssh2": "^0.5.38",
		"bestzip": "^2.1.2",
		"if-newer": "^1.0.2",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"@types/msgpack-lite": "^0.1.6",
		"@types/node-cache": "^4.1.3",
		"msgpack-lite": "^0.1.26",
		"node-cache": "^4.2.0",
		"shell-escape": "^0.2.0",
		"ssh2": "^0.8.2",
		"ts-priority-queue": "^0.1.1"
	}
}
